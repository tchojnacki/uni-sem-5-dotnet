@model IEnumerable<StoreApp.Models.Article>
@{
    ViewBag.Title = "Article Index";
}

<h1 class="title">Article Index</h1>
<table class="table is-fullwidth is-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(a => a.Id)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Name)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Price)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.ExpirationDate)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Category)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var a in Model) {
        <tr>
            <td>
                @Html.DisplayFor(_ => a.Id)
            </td>
            <td>
                @Html.DisplayFor(_ => a.Name)
            </td>
            <td>
                @Html.DisplayFor(_ => a.Price)
            </td>
            <td>
                @Html.DisplayFor(_ => a.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(_ => a.Category)
            </td>
            <td>
                <p class="buttons are-small">
                    @Html.ActionLink("Details", "Details", new { id = a.Id }, new { @class = "button is-info" })
                    @Html.ActionLink("Edit", "Edit", new { id = a.Id }, new { @class = "button is-warning" })
                    @Html.ActionLink("Delete", "Delete", new { id = a.Id }, new { @class = "button is-danger" })
                </p>
            </td>
        </tr>
}
    </tbody>
</table>
<p class="buttons">
    <a class="button is-primary" asp-action="Create">Create</a>
    <button id="import" class="button is-info is-light">Import</button>
    <button id="export" class="button is-info is-light">Export</button>
    @Html.AntiForgeryToken()
</p>
