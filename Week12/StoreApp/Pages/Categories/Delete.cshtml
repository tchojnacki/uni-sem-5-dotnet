@page "{id:int}"
@model StoreApp.Pages.Categories.DeleteModel
@{
    ViewData["Title"] = $"Delete Category #{Model.Category.Id}";
}

<h2>Delete Category #@Model.Category.Id</h2>
<p>Are you sure you want to delete this?</p>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(c => c.Category.Name)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(c => c.Category.Name)
    </dd>
</dl>
<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-secondary" asp-page="/Categories/Index">Back</a>
</form>
