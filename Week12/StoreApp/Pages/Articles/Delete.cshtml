@page "{id}"
@model DeleteModel
@{
    ViewBag.Title = $"Delete Article #{Model.Article.Id}";
}

<h2>Delete Article #@Model.Article.Id</h2>
<p>Are you sure you want to delete this?</p>
@{
    await Html.RenderPartialAsync("_ArticleDetails", Model.Article);
}
<form method="post">
    <input type="hidden" asp-for="Article.Id" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="btn btn-secondary" asp-page="/Articles/Index">Back</a>
</form>
