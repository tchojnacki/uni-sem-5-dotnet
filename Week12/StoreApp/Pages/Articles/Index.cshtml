@page
@model IndexModel
@{
    ViewData["Title"] = "Articles";
}

<h2>Articles</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(a => a.Articles.First().Name)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Articles.First().Price)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Articles.First().Category)
            </th>
            <th>
                @Html.DisplayNameFor(a => a.Articles.First().Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var article in Model.Articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(_ => article.Name)
                </td>
                <td>
                    @Html.DisplayFor(_ => article.Price)
                </td>
                <td>
                    @Html.DisplayFor(_ => article.Category!.Name)
                </td>
                <td>
                    <img alt="@Html.DisplayFor(_ => article.Name)" width="100" class="img-fluid rounded" src="@Html.DisplayFor(_ => article.Photo)" />
                </td>
                <td>
                    <a class="btn btn-sm btn-info" asp-page="/Articles/Details" asp-route-id="@article.Id">Details</a>
                    <a class="btn btn-sm btn-warning" asp-page="/Articles/Edit" asp-route-id="@article.Id">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-page="/Articles/Delete" asp-route-id="@article.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    <a class="btn btn-primary" asp-page="/Articles/Create">Create</a>
</p>
