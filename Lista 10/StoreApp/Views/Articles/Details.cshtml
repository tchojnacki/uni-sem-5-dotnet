@model StoreApp.Models.Article

@{
    ViewBag.Title = $"Article #{Model.Id}";
}

<h2>Article #@Model.Id</h2>
<dl class="row">
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Name)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Name)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Price)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Price)
    </dd>
    <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Category)
    </dt>
    <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Category!.Name)
    </dd>
</dl>
<p>
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</p>
